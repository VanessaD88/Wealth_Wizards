<div class="card-dashboard">
    <!-- Avatar + Username -->
    <div class="card-header d-flex align-items-center mb-4">
      <%= image_tag(current_user.avatar || "logo.png",
                    class: "rounded-circle me-3",
                    style: "width:70px; height:70px; object-fit:cover;") %>
      <div>
        <h4 class="mb-0 fw-bold">
          <%=@user.username.presence%>
        </h4>
        <small>Level <%= @user.level%></small>
      </div>
    </div>

    <!-- Balance + Decision Score -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <div class="fw-semibold">Balance</div>
        <div class="fs-5 text-success fw-bold">
          ðŸ’° <%= number_to_currency(current_user.balance || 0, unit: "â‚¬") %>
        </div>
      </div>

      <div class="text-end">
        <div class="fw-semibold">Decision Score</div>
        <div class="fs-5 text-primary fw-bold">
          ðŸ§  <%= current_user.decision_score || 50 %> / 100
        </div>
      </div>
    </div>

    <hr>

    <!-- Progress Bar -->
    <div class="mb-2 fw-semibold">Progress to next level</div>
    <div class="progress" style="height: 16px;">
      <div class="progress-bar progress-bar-striped bg-warning"
           role="progressbar"
           style="width: <%= current_user.balance || 0 %>%;"
           aria-valuenow="<%= current_user.balance || 0 %>"
           aria-valuemin="0"
           aria-valuemax="100">
        <%= current_user.balance || 0 %>%
      </div>
    </div>

</div>
