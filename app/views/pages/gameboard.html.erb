<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @challenge %>
        <h2 class="mb-2"><%= @challenge.title %></h2>
        <p class="text-dark">Category: <%= @challenge.category %> | Difficulty: <%= @challenge.difficulty %></p>

        <%= form_with model: @challenge,
                      url: select_choice_challenge_path(@challenge),
                      method: :patch,
                      local: true do |form| %>

          <div class="card-custom">
            <div class="card-body">
              <h5 class="card-header">Task</h5>

              <% if @challenge.description.present? %>
                <p class="card-body text-muted mb-4"><%= @challenge.description %></p>
              <% end %>

              <div class="list-group">
                <% @challenge_options.each do |option_string| %>
                  <% number, text = option_string.split('.', 2).map(&:strip) %>

                  <div class="card-body list-group-item list-group-item-action d-flex align-items-start gap-3">
                    <%= form.radio_button :choice, number.to_i,
                          id: "option_#{number}",
                          class: "form-check-input mt-1" %>

                    <label for="option_#{number}" class="form-check-label fw-medium mb-0 flex-grow-1">
                      <span class="badge bg-success-subtle text-success-emphasis me-2">Option <%= number %></span>
                      <span><%= text %></span>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
              <% if @challenge.completion_status %>
                <span class="badge bg-success">Completed</span>
              <% end %>
            </div>
            <div>
              <%= form.submit "Submit Answer", class: "btn btn-primary" %>
            </div>
          </div>

        <% end %> <% else %>
        <p class="text-center text-muted">No challenge selected yet. Pick one from the gameboard.</p>
      <% end %>

      <%= button_to "Generate New Challenge",
                    level_challenges_path(@level),
                    method: :post,
                    class: "btn button-gold" %>
    </div>
  </div>
</div>
