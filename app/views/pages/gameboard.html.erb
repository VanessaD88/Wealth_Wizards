<%= button_to "Generate New Challenge",
                  level_challenges_path(@level),
                  method: :post,
                  class: "btn btn-success btn-lg" %>



<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @challenge %>
        <h2 class="mb-2"><%= @challenge.title %></h2>
        <p class="text-muted">Category: <%= @challenge.category %> | Difficulty: <%= @challenge.difficulty %></p>

        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">Task</h5>
            <pre style="white-space: pre-wrap;"><%= @challenge.challenge_prompt.presence || "No task generated yet. Pick the challenge from the gameboard." %></pre>
          </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
          <% #link_to "Back to Gameboard", gameboard_path, class: "btn btn-outline-secondary" %>
          <% if @challenge.completion_status %>
            <span class="badge bg-success">Completed</span>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-muted">No challenge selected yet. Pick one from the gameboard.</p>
      <% end %>
    </div>
  </div>
</div>
