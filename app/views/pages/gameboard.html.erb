<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @challenge %>
        <h2 class="mb-2"><%= @challenge.title %></h2>
        <p class="text-dark">Category: <%= @challenge.category %> | Difficulty: <%= @challenge.difficulty %></p>

        <%= form_with model: @challenge,
                      url: select_choice_challenge_path(@challenge),
                      method: :patch,
                      local: true do |form| %>

          <div class="card-custom">
            <div class="card-body">
              <h5 class="card-header">Task</h5>

              <% if @challenge.description.present? %>
                <p class="card-body text-muted mb-4"><%= @challenge.description %></p>
              <% end %>

              <div class="list-group">
                <% @challenge_options.each do |option_string| %>
                  <% number, text = option_string.split('.', 2).map(&:strip) %>

                  <div class="card-body list-group-item list-group-item-action d-flex align-items-start gap-3">
                    <%= form.radio_button :choice, number.to_i,
                          id: "option_#{number}",
                          class: "form-check-input mt-1" %>

                    <label for="option_#{number}" class="form-check-label fw-medium mb-0 flex-grow-1">
                      <span class="badge bg-success-subtle text-success-emphasis me-2">Option <%= number %></span>
                      <span><%= text %></span>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
              <% if @challenge.completion_status %>
                <span class="badge bg-success">Completed</span>
              <% end %>
            </div>
            <div>
              <%# Disable button if feedback is already showing %>
              <%= form.submit "Submit Answer", class: "btn btn-primary", disabled: @show_answer_feedback %>
            </div>
          </div>

        <% end %>
      <% else %>
        <p class="text-center text-muted">No challenge selected yet. Pick one from the gameboard.</p>
      <% end %>

      <%# --- This is the new, merged feedback block --- %>
      <% if @show_answer_feedback %>
        <div class="card-custom mt-4">
          <div class="card-body">
            <h5 class="card-header">Result</h5>

            <div class="card-body">
              <!-- This "Correct/Wrong" message is now inside the styled card -->
              <p class="mb-3 fw-semibold <%= @answer_is_correct ? 'text-success' : 'text-danger' %>">
                <%= @answer_is_correct ? 'Correct!' : 'Wrong Answer' %>
              </p>

              <!-- The rest of the feedback details follow -->
              <h6 class="fw-semibold text-success-emphasis">Correct Answer</h6>
              <p class="text-muted mb-3">
                Option <%= @challenge.correct_answer %>
                <% if @correct_answer_text.present? %>
                  â€“ <%= @correct_answer_text %>
                <% end %>
              </p>
              <h6 class="fw-semibold">Feedback</h6>
              <p class="text-muted mb-0"><%= @challenge.feedback %></p>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <%= link_to "Continue your journey", pages_gameboard_path, class: "btn btn-outline-primary" %>
        </div>
      <% end %>
      <%# --- End of merged feedback block --- %>

      <%= button_to "Generate New Challenge",
                    level_challenges_path(@level),
                    method: :post,
                    class: "btn button-gold mt-4" %>
    </div>
  </div>
</div>
