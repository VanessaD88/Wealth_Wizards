<div class="container d-flex justify-content-center align-items-center">
  <div class="col-12 col-lg-5 my-4">
    <h2 class="text-center mb-3">Profile</h2>
    <img src="#" class="rounded-circle border border-3 border-primary" alt="Avatar" width="150" height="150">
    <%= link_to "Change Avatar", "#", class: "btn btn-primary" %>
    <div class="row">
    <h5 class="mt-3">Account details</h5>
    <p class="mt-1">Email</p>
    <%= @user.email, class: "text-muted" %>
    <p class="mt-1">Username</p>
    <%= @user.username %>
    <p class="mt-1">Password</p>
    <p class="text-muted">••••••••</p>
    <%= link_to "Edit details", edit_user_registration_path, class: "btn btn-primary mt-1" %>
  </div>
</div>
