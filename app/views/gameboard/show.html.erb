<% @challenges.each do |challenge| %>
  <div class="col-md-3 col-sm-6 mb-4">
    <div class="card h-100 shadow-sm">
      <div class="card-body d-flex flex-column justify-content-between">
        <div>
          <h5 class="card-title"><%= challenge.title %></h5>
          <p class="card-text"><%= truncate(challenge.description, length: 120) %></p>
        </div>

        <!-- picks the challenge and generates challenge.challenge_prompt -->
        <%= button_to "Pick Challenge",
                      challenges_path(challenge_id: challenge.id),
                      method: :post,
                      class: "btn btn-primary mt-3" %>
      </div>
    </div>
  </div>
<% end %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-2"><%= @challenge.title %></h2>
      <p class="text-muted">Category: <%= @challenge.category %> | Difficulty: <%= @challenge.difficulty %></p>

      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Task</h5>
          <pre style="white-space: pre-wrap;"><%= @challenge.challenge_prompt.presence || "No task generated yet. Pick the challenge from the gameboard." %></pre>
        </div>
      </div>

      <div class="mt-4 d-flex justify-content-between">
        <%= link_to "Back to Gameboard", gameboard_path, class: "btn btn-outline-secondary" %>
        <% if @challenge.completion_status %>
          <span class="badge bg-success">Completed</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
